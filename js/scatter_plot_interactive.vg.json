{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Land Area, CO2 Emissions, and Population by Country",
  "width": 300,
  "height": 200,
  "data": {
    "url": "data/world-data-2023.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1500000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Country_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Japan",
          "India",
          "Indonesia",
          "China",
          "Thailand",
          "Bangladesh",
          "Philippines",
          "Iran"
        ],
        "labels": [
          "Show All",
          "Japan",
          "India",
          "Indonesia",
          "China",
          "Thailand",
          "Bangladesh",
          "Philippines",
          "Iran"
        ],
        "name": "Country Selection: "
      }
    }
  ],

  "transform": [
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Country_selection == null || datum.Country == Country_selection"
    },
    {
      "filter": "Country_selection == null || datum.Country == Country_selection"
    },
    {
      "filter": {"field": "Country", "oneOf": ["Japan", "India", "Indonesia", "China", "Thailand","Bangladesh","Philippines", "Iran"]}
    }
  ],

  "encoding": {
    "x": {
      "field": "Land Area(Km2)",
      "type": "quantitative",
      "title": "Land Area(Km2)",
      "axis": {"tickCount": 3},
      "scale": {"type": "log", "domain": [10000, 50000000]}
    },
    "y": {
      "field": "Co2-Emissions",
      "type": "quantitative",
      "axis": {"tickCount": 4},
      "scale": {"type": "log", "domain": [10000, 100000000]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000000,350000000,500000000,750000000],
            "range": [50, 150, 300, 450, 800]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": [
              "Japan",
              "India",
              "Indonesia",
              "China",
              "Thailand",
              "Bangladesh",
              "Philippines",
              "Iran"
            ],
            "range": [
              "#FF0000",
              "#FF5500",
              "#FFFF00",
              "#00FF00",
              "#0000FF",
              "#AA00FF",
              "#F19CBB",
              "#990066"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Land Area(Km2)", "type": "quantitative", "format": ","},
          {"field": "Co2-Emissions", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 9,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Japan' || datum['Country'] == 'India' || datum['Country'] == 'Indonesia' || datum['Country'] == 'Thailand' || datum['Country'] == 'Bangladesh' || datum['Country'] == 'Philippines' || datum['Country'] == 'Iran' ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Land Area(Km2)", "type": "quantitative", "format": ","},
          {"field": "Co2-Emissions", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}