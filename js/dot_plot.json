{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
    "title":"Gasoline Price and CPI by Country",
    "data": {
        "url": "data/world-data-2023.csv"
        },
        "width": 400,
        "height": 200,

    "params": [
        {
            "name": "Country_selection",
            "bind": {
            "input": "select",
            "options": [
                null,
                "Japan",
                "India",
                "Indonesia",
                "China",
                "Thailand",
                "Bangladesh",
                "Philippines",
                "Iran"
            ],
            "labels": [
                "Show All",
                "Japan",
                "India",
                "Indonesia",
                "China",
                "Thailand",
                "Bangladesh",
                "Philippines",
                "Iran"
            ],
            "name": "Country Selection: "
            }
        }
        ],


        "mark":{"type": "point"},

    "transform": [{
        "filter": "Country_selection == null || datum.Country == Country_selection"
        },
        {
            "filter": {"field": "Country", "oneOf": ["Japan", "India", "Indonesia", "China", "Thailand","Bangladesh","Philippines", "Iran"]}
        }
        ],
        
    "encoding": {
        "x": {"field": "Gasoline Price", "type": "quantitative", "scale": {"domain": [0.3, 1.2]}},

        "y": {"field": "CPI", "type": "quantitative", "scale": {"domain": [0, 600]}},
        "color": {
        "field": "Country",
        "type": "nominal",
        "scale": {
            "domain": [
            "Japan",
            "India",
            "Indonesia",
            "China",
            "Thailand",
            "Bangladesh",
            "Philippines",
            "Iran"
            ],
            "range": [
            "#FF0000",
            "#FF5500",
            "#FFFF00",
            "#00FF00",
            "#0000FF",
            "#AA00FF",
            "#F19CBB",
            "#990066"
            ]
        }
        },
        "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "Gasoline Price", "type": "quantitative", "format": "$"}
        ]
    }
  }